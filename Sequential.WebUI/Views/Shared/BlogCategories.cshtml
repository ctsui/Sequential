@model List<CategoryVModel>
<div id="topics">
<h3>Categories</h3>
@if (Model.Count() > 0) {
   <ul>
   @foreach (CategoryVModel cat in Model) {
      <li>@Html.ActionLink(cat.ToString(), "PostsForCategory", "category",
               new { category = Html.Encode(cat.Name), pageNum = 1 }, null)</li>
   }
   </ul>
} else {
<p>None yet. Write more!</p>
}
</div>
